{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2017",
    "module": "commonjs",                                /* Specify what module code is generated. */
    "skipLibCheck": true,  
    "outDir": "dist",
    "rootDir": "./",
    "baseUrl": "./",
    "esModuleInterop": true                               /* Skip type checking all .d.ts files. */
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
